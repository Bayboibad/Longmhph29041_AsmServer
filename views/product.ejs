<!DOCTYPE html>
<html lang="en">

<head>
    <title>Truyện Tranh</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
        integrity="sha384-GLhlTQ8i7uZL7l6U6ZN+Y5dLQPrnM1hjrviI6L6Z5S+gRvHTt8+pTmN9PqDQDgh" crossorigin="anonymous">
    <style>
        .custom-color {
            background-color: orange;
            padding-left: 10%;
            padding-right: 10%;
        }

        .navbar-brand {
            color: white;
        }

        .navbar-nav .nav-link {
            color: white !important;
        }

        .navbar-toggler-icon {
            background-color: white;
        }

        .product-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            margin-top: 20px;
        }

        .product-item {
            width: calc(20% - 20px);
            border: 1px solid #ddd;
            padding: 8px;
            border-radius: 5px;
            transition: transform 0.3s ease-in-out;
            box-sizing: border-box;
        }

        .product-item:hover {
            transform: scale(1.05);
        }

        .product-item img {
            max-width: 100%;
            height: auto;
            border-radius: 5px;
            margin-bottom: 10px;
        }

        @media (max-width: 992px) {
            .product-item {
                width: calc(33.33% - 20px);
            }
        }

        @media (max-width: 768px) {
            .product-item {
                width: calc(50% - 20px);
            }
        }

        @media (max-width: 576px) {
            .product-item {
                width: 100%;
            }
        }

        .btn {
            width: 100%;
            height: 40px;
            background-color: orange;
            color: white;
        }

        h4 {
            font-weight: bold;
        }
    </style>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark custom-color">
        <a class="navbar-brand" href="product">Truyện tranh</a>
        <a class="navbar-brand" href="manage">Quản lý</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/"><i class="fas fa-sign-out-alt"></i> Đăng xuất</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-5">
        <div class="product-container">
            <% product.forEach((item)=> { %>
                <div class="product-item">
                    <img src="<%= item.banner %>" alt="<%= item.plot %>">
                    <h4>
                        <%= item.plot %>
                    </h4>
                    <p>
                        <%= item.author %>
                    </p>
                    <!-- Truyền dữ liệu sản phẩm bằng data-* attributes -->
                    <button type="button" class="btn btn-chiTiet" 
                        data-product-id="<%= item._id %>"
    >
                            Chi tiết
                    </button>
                </div>
                <% }); %>
        </div>

    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const detailButtons = document.querySelectorAll('.btn-chiTiet');

            detailButtons.forEach(button => {
                button.addEventListener('click', function () {
                    // Lấy dữ liệu từ data-* attributes
                    const productId = this.getAttribute('data-product-id');
                    // Chuyển hướng đến trang chi tiết và truyền dữ liệu
                    window.location.href = `/detail/${productId}?id=${productId}`;
                });
            });
        });
    </script>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>
</body>

</html>